<com.zns.comicdroid.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" 
    android:background="@color/contentBg" >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp" />
    
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivImage"
        android:shadowRadius="0"
        android:textColor="@color/altFg1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
    	android:id="@+id/tvBorrower"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/ivImage"
	    android:layout_alignParentBottom="true" />
	
	<TextView
	    android:id="@+id/tvBorrowedDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:textSize="@dimen/text_small" />
		
</com.zns.comicdroid.widget.CheckableRelativeLayout>