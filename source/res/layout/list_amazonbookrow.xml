<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >
    
    <ImageView
        android:id="@+id/ivAmazonBook"
       	android:layout_width="90px"
       	android:layout_height="wrap_content"
       	android:adjustViewBounds="true"
       	android:scaleType="fitXY"	        
       	android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true" />    
    
    <TextView
        android:id="@+id/tvAmazonBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/amazonFg"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivAmazonBook"
        android:layout_toStartOf="@+id/tvAmazonBookPrice" />
    
    <TextView
        android:id="@+id/tvAmazonBookDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivAmazonBook"
        android:layout_below="@id/tvAmazonBookTitle" />
        
    <TextView
        android:id="@+id/tvAmazonBookPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/amazonFg"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"        
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" />
        
</RelativeLayout>