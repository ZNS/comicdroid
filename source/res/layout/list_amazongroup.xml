<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:background="@color/contentBg" >
		    	    
	    <ImageView
	        android:id="@+id/ivAmazonGroup"
	       	android:layout_width="50px"
	       	android:layout_height="wrap_content"
	       	android:adjustViewBounds="true"
	       	android:scaleType="fitXY"	        
	       	android:layout_marginRight="5dp"
	        android:layout_alignParentLeft="true" />
	   
	    <TextView
	        android:id="@+id/tvAmazonGroup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:layout_toRightOf="@id/ivAmazonGroup"
	        android:layout_toLeftOf="@+id/ivAmazonGroupHandle"
	        android:layout_centerVertical="true"
	        android:textStyle="bold" />
	    
	</RelativeLayout>

	<View
	    android:id="@+id/vAmazonGroupSeparatorTop"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="@color/amazonBg" />
</LinearLayout>	