<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/contentBg" >

	<View
	    android:id="@+id/vAmazonGroupSeparatorTop"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="@color/abs__background_holo_light"
    	android:layout_marginBottom="3dp"
    	android:layout_alignParentTop="true" />
		    	    
    <ImageView
        android:id="@+id/ivAmazonGroup"
       	android:layout_width="50px"
       	android:layout_height="wrap_content"
       	android:adjustViewBounds="true"
       	android:scaleType="fitXY"	        
       	android:layout_marginRight="5dp"
       	android:layout_below="@id/vAmazonGroupSeparatorTop"
        android:layout_alignParentLeft="true" />
   
    <TextView
        android:id="@+id/tvAmazonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"	        
        android:layout_toRightOf="@id/ivAmazonGroup"
        android:layout_toLeftOf="@+id/ivAmazonGroupHandle"
        android:layout_centerVertical="true"
        android:textStyle="bold" />
    
    <ImageView
        android:id="@+id/ivAmazonGroupHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/amazon_arrow_expand"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    
</RelativeLayout>