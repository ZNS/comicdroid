<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zns.comicdroid"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.zns.comicdroid.Start"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.zns.comicdroid.Add"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="com.zns.comicdroid.ComicView"
            android:label="@string/title_activity_comic_view"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.zns.comicdroid.ListAuthorsFragment"
            android:label="@string/title_activity_authors" >
        </activity>
        <activity
            android:name="com.zns.comicdroid.Edit"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="com.zns.comicdroid.Comics"
            android:label="@string/title_activity_comics" >
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-85qsb7sjbuyljzu" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zns.comicdroid.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>